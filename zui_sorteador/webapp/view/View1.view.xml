<mvc:View xmlns:uxap="sap.uxap"
  controllerName="zuisorteador.controller.View1"
  xmlns:u="sap.ui.unified"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:semantic="sap.m.semantic"
  xmlns="sap.m">
  <App id="idApp">
    <pages>
      <semantic:SemanticPage id="mainPage" showFooter="true">
          <uxap:ObjectPageHeader >
            
    <HBox alignItems="Center" class="myHeaderHBox" width="790px" height="10px">
      <Image src="../arquivos/versao1 (1).png" height="200px" width="auto" id="logosinos"/>
    </HBox>
          </uxap:ObjectPageHeader>
        <semantic:content>
        <VBox>
            <Text
              id="winnerText"
              text="{= 'Último sorteado - ' + ${/ultimoSorteado/nome} }"
              textAlign="Center"
              visible="{= ${/ultimoSorteado/nome} !== undefined }"
              class="ultimoSorteadoText"/>
              <Toolbar>
                <Title text="Sorteados" level="H3" />
              </Toolbar>
              <Table id="drawnTable" items="{/dataDrawn}">
                <columns>
                  <Column width="100px"><Text text="Número"/></Column>
                  <Column><Text text="Nome"/></Column>
                </columns>
                <items>
                  <ColumnListItem>
                    <cells>
                      <Text text="{numero}" />
                      <Text text="{nome}" />
                    </cells>
                  </ColumnListItem>
                </items>
              </Table>
          </VBox>
          </semantic:content>

          <semantic:customFooterContent>
            <u:FileUploader id="fileUploader"
                            fileType="csv"
                            change="onFileChange"
                            buttonOnly="true"
                            buttonText="Importar Lista" 
                            style="Transparent"/>
            <Button text="Sortear"
                    press=".onSortear"
                    visible="{= ${/data}.length > 0 }" 
                    type="Emphasized"/>
   
        </semantic:customFooterContent>
      </semantic:SemanticPage>
    </pages>
  </App>
</mvc:View>