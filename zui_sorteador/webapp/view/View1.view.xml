<mvc:View xmlns:uxap="sap.uxap"
  controllerName="zuisorteador.controller.View1"
  xmlns:u="sap.ui.unified"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:semantic="sap.m.semantic"
  xmlns="sap.m">
  <App id="idApp">
    <pages>
      
      <semantic:SemanticPage id="mainPage" >
        
          <uxap:ObjectPageHeader >
            <u:FileUploader id="fileUploader" fileType="csv" change="onFileChange" buttonOnly="true" buttonText="Importar Lista"/>
            <Button text="Sortear" press=".onSortear" visible="{= ${/data}.length > 0 }" />
          </uxap:ObjectPageHeader>
        
        <VBox>
            <Text
              id="winnerText"
              text="{= 'Último sorteado - ' + ${/ultimoSorteado/nome} }"
              textAlign="Center"
              visible="{= ${/ultimoSorteado/nome} !== undefined }"
              class="ultimoSorteadoText"/>
              <Toolbar>
                <Title text="Sorteados" level="H3" />
              </Toolbar>
              <Table id="drawnTable" items="{/dataDrawn}">
                <columns>
                  <Column width="100px"><Text text="Número"/></Column>
                  <Column><Text text="Nome"/></Column>
                </columns>
                <items>
                  <ColumnListItem>
                    <cells>
                      <Text text="{numero}" />
                      <Text text="{nome}" />
                    </cells>
                  </ColumnListItem>
                </items>
              </Table>
          </VBox>
      </semantic:SemanticPage>
    </pages>
  </App>
</mvc:View>